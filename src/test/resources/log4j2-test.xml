<?xml version="1.0" encoding="UTF-8"?>
<!-- Possible log-levels: TRACE, DEBUG, INFO, WARN, ERROR, ALL or OFF - ERROR more specific than DEBUG-->
<!-- 
http://logging.apache.org/log4j/2.x/manual/layouts.html
	%C{1} : at.rovo.Main -> Main
	%C{1.} : at.rovo.Main -> at.rovo.Main
	%d{HH:mm:ss.SSS} : 19:27:32.1234
	%p : Level of the event
	%t : Thread that produced the logging-event
 -->
<configuration status="warn" name="Drum-Test" packages="at.rovo">

    <properties>
        <!-- Log file for checking DRUM -->
        <property name="drumFile">log/DRUMTest.log</property>
        <!-- Log file for checking data storage -->
        <property name="cacheFile">log/CacheTest.log</property>
        <!-- File for test cases -->
        <property name="testFile">log/Test.log</property>
    </properties>

    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} %p %C{1}.%M() - %m%n%ex"/>
            <!-- ThresholdFilter returns the onMatch result if the level in the LogEvent
            is the same or more specific than the configured level and the onMismatch
            value otherwise. For example, if the ThresholdFilter is configured with
            Level ERROR and the LogEvent contains Level DEBUG then the onMismatch
            value will be returned since ERROR events are more specific than DEBUG.
            The default Level is ERROR.  -->
            <!-- accept INFO and WARN messages but don't show ERRORs on the system-output ... -->
            <filters>
                <!--<ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL"/>-->
                <!--<ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="NEUTRAL"/>-->
                <!--<ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>-->
            </filters>
        </Console>
        <!-- ... show them on the error-console! -->
        <Console name="Error" target="SYSTEM_ERR">
            <PatternLayout pattern="%d{HH:mm:ss} %-5p %C{1}.%M():%L - %m%n%ex"/>
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>

        <!-- LogFile section -->
        <File name="DrumFile" fileName="${drumFile}" append="false">
            <PatternLayout pattern="%d{HH:mm:ss} %-5p %C{1}.%M():%L - %m%n%ex"/>
        </File>
        <File name="CacheFile" fileName="${cacheFile}" append="false">
            <PatternLayout pattern="%d{HH:mm:ss} %-5p %C{1}.%M():%L - %m%n%ex"/>
        </File>
        <File name="TestFile" fileName="${testFile}" append="false">
            <PatternLayout pattern="%d{HH:mm:ss} %-5p %C{1}.%M():%L - %m%n%ex"/>
        </File>
        <Async name="ErrorLog">
            <AppenderRef ref="TestFile"/>"
        </Async>
    </appenders>

    <loggers>
        <!-- Data storage -->
        <logger name="at.rovo.caching.drum.internal.backend.cacheFile.CacheFile" level="trace" additivity="false">
            <appender-ref ref="CacheFile"/>
        </logger>

        <!-- DRUM classes -->
        <logger name="at.rovo.caching.drum.DrumImpl" level="trace" additivity="false">
            <appender-ref ref="DrumFile"/>
        </logger>
        <logger name="at.rovo.caching.drum.internal.InMemoryMessageBroker" level="trace" additivity="false">
            <appender-ref ref="DrumFile"/>
        </logger>
        <logger name="at.rovo.caching.drum.internal.DiskBucketWriter" level="trace" additivity="false">
            <appender-ref ref="DrumFile"/>
        </logger>
        <logger name="at.rovo.caching.drum.internal.DiskFileMerger" level="trace" additivity="false">
            <appender-ref ref="DrumFile"/>
        </logger>
        <logger name="at.rovo.caching.drum.internal.backend.cacheFile.CacheFileMerger" level="trace" additivity="false">
            <appender-ref ref="DrumFile"/>
        </logger>
        <logger name="at.rovo.caching.drum.internal.backend.berkeley.BerkeleyCacheFileMerger" level="debug"
                additivity="false">
            <appender-ref ref="DrumFile"/>
        </logger>

        <logger name="at.rovo.caching.drum.DrumExceptionHandler" level="debug" additivity="false">
            <appender-ref ref="DrumFile"/>
        </logger>

        <!-- Test classes -->
        <logger name="at.rovo.test.BaseCacheTest" level="debug" additivity="false">
            <appender-ref ref="TestFile"/>
        </logger>
        <logger name="at.rovo.test.DrumTest" level="debug" additivity="false">
            <appender-ref ref="TestFile"/>
        </logger>
        <logger name="at.rovo.test.LogFileDispatcher" level="debug" additivity="false">
            <appender-ref ref="TestFile"/>
        </logger>
        <logger name="at.rovo.test.CacheFileTest" level="debug" additivity="false">
            <appender-ref ref="TestFile"/>
        </logger>

        <!-- General output -->
        <logger name="at.rovo" level="info" additivity="true">
            <appender-ref ref="Console"/>
        </logger>
        <root level="error">
            <appender-ref ref="Error"/>
            <appender-ref ref="ErrorLog"/>
        </root>
    </loggers>
</configuration>